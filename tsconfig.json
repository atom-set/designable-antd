{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@designable/*": ["./packages/*/src"]
    }
  }
}
